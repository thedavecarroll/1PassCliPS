<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>

    <Company>thedavecarroll</Company>
    <Authors>Dave Carroll</Authors>
    <Title>OPassCliPS</Title>
    <Description>A 1Password CLI wrapper for PowerShell 7.</Description>
    <Copyright>Copyright Â© 2023</Copyright>
    <Version>0.1.0</Version>
    <RepositoryUrl>https://github.com/thedavecarroll/OPassCliPS</RepositoryUrl>

    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="System.Management.Automation" Version="7.2.8" />
  </ItemGroup>
  
  <ItemGroup>
    <Reference Include="OnePassword.NET">
      <HintPath>..\Pending\OnePassword.NET.dll</HintPath>
    </Reference>
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Exceptions\" />
  </ItemGroup>

</Project>
